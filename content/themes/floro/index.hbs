{{!< default}}
    <main class="content" role="main" id="gridalicious">
        {{#foreach posts}}
        <article class="{{post_class}}">
            <header class="post-header">
                {{content words="0"}}
            </header>
            <section class="post-excerpt">
                <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
                <div class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> {{#if tags}} <span class="tags">{{tags separator=" , "}}</span>{{/if}}</div>
                <p>{{excerpt}}</p>
                <a href="{{url}}" class="button">Read more</a>
            </section>
        </article>
        {{/foreach}}
    </main>
{{pagination}}